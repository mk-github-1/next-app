{
  // IntelliSense を使用して利用可能な属性を学べます。
  // 既存の属性の説明をホバーして表示します。
  // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
  "configurations": [
    // launch & server
    {
      "name": "launch",
      "type": "node", // node-terminal？
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      // node-terminal用 "command": "npm run dev",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
      "sourceMaps": true
    },
    {
      "name": "browser",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
      // "skipFiles": ["<node_internals>/**"],
    }
  ],
  "compounds": [
    {
      "name": "compound-launch",
      "configurations": ["launch", "browser"],
      "stopAll": true
    }
  ]
}
